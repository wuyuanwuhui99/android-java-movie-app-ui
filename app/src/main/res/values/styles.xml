<resources>
    <style name="user_data">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="normal_text_style">
        <item name="android:textColor">@color/navigate</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="sm_icon_size_style">
        <item name="android:layout_width">@dimen/small_img_size</item>
        <item name="android:layout_height">@dimen/small_img_size</item>
    </style>
    <style name="md_icon_size_style">
        <item name="android:layout_width">@dimen/md_img_size</item>
        <item name="android:layout_height">@dimen/md_img_size</item>
    </style>
    <style name="small_img_style">
        <item name="android:layout_width">@dimen/small_img_size</item>
        <item name="android:layout_height">@dimen/small_img_size</item>
    </style>
    <style name="user_category_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/small_margin_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fragment_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/container_padding_size</item>
        <item name="android:paddingRight">@dimen/container_padding_size</item>
        <item name="android:paddingTop">@dimen/container_padding_size</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="title_font_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:textSize">@dimen/big_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="user_title">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/background_dark</item>
        <item name="colorControlActivated">@color/background_blue</item>
    </style>
    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>
